{
  "name": "Wallet backend",
  "version": "1.0.0",
  "description": "Wallet apis",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start:local": "cross-env APP_ENV=dev nodemon main.js",
    "eslint": "npx eslint './**'",
    "eslint-fix": "eslint ./ --fix",
    "test": "APP_ENV=test jest --runInBand --silent --coverage ",
    "testWithCoverage": "APP_ENV=test jest --runInBand --silent --coverage "
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/main.js",
      "/swagger.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "author": "Sudarshan Dhatrak",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-validator": "^6.9.2",
    "mongodb": "^4.13.0",
    "mongoose": "^5.9.26",
    "mongoose-autopopulate": "^0.12.3",
    "swagger-ui-express": "^4.5.0",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-loggly-bulk": "^3.2.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^26.6.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.19",
    "supertest": "^4.0.2"
  }
}
